<h2>Welcome to Pizza Shop!</h2>
<hr/>
<div class="row">
	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<%= p.title %>
			</div>
			<div>
				<img src="<%= p.small_image_path %>">
			</div>
			<div>
				<%= p.description %>
			</div>
			<div>
				Size: <%= p.size %>
			</div>
			<div>
				Price: <%= p.price %> Rub
			</div>
			<div>
				<button class="btn btn-success btn-sm" onclick="add_to_cart()">Add to cart</button>
			</div>
		</div>
	<% end %>
</div>
<hr/>
<button class="btn btn-success btn-lg" onclick="something()">Click me!</button>